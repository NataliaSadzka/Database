<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextName" android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp" android:contentDescription="Podaj nazwę" android:hint="Nazwa"
            android:textColor="#151515"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextColor"
            android:layout_marginTop="140dp" android:layout_marginLeft="40dp" android:contentDescription="Podaj kolor"
            android:hint="Kolor"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTaste" android:layout_marginTop="180dp" android:layout_marginLeft="40dp"
            android:hint="Smak"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextSize" android:layout_marginTop="220dp" android:layout_marginLeft="40dp"
            android:hint="Wielkość"/>
    <Button
            android:text="Zapisz"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSave" android:layout_marginTop="570dp"
            android:layout_marginLeft="30dp" style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#131313"/>
    <Button
            android:text="Anuluj"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonCancel" android:layout_marginTop="570dp"
            android:layout_marginLeft="270dp" style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="#101010"/>
</RelativeLayout>