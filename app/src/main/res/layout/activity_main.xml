<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textFruit" android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp" android:textColor="#121111" android:textSize="12sp"/>
    <Button
            android:text="Dodaj owoc"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAddFruit"
            android:layout_marginTop="570dp" android:layout_marginLeft="20dp"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="#121111"/>
    <Button
            android:text="Wyczyść dane"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonDelete"
            android:layout_marginTop="570dp" android:layout_marginLeft="260dp"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="#131313"/>

</RelativeLayout>